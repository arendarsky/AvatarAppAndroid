<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="heading">

        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#060606</item>

    </style>

    <style name="text">

        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#060606</item>

    </style>

    <style name="label">

        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#C4CACC</item>

    </style>

    <style name="ActivityProducerNameButtonText">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="activity_casting_heading">

        <item name="android:textSize">
            36sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #060606
        </item>

    </style>

    <style name="activity_casting_long_sample">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #686868
        </item>

    </style>

    <style name="activity_casting_tv1_text">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:textColor">
            #ABABAB
        </item>

    </style>

    <style name="activity_casting_name">

        <item name="android:textSize">
            24sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #060606
        </item>

    </style>


</resources>
