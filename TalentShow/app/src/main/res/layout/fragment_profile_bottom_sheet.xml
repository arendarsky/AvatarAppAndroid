<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#14ffffff"
    tools:context=".presentation.main.BottomSheetFragments.ProfileBottomSheet">

    <TextView
        android:id="@+id/profile_bottom_sheet_edit"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Редактировать профиль"
        android:textColor="@color/whiteText"
        android:textSize="20sp"
        android:background="@drawable/bottom_sheet_profile_item_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_bottom_sheet_settings"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Открыть настройки"
        android:textColor="@color/whiteText"
        android:textSize="20sp"
        android:background="@drawable/bottom_sheet_profile_item_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_bottom_sheet_edit" />

    <TextView
        android:id="@+id/profile_bottom_sheet_cancel"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Отмена"
        android:textColor="@color/whiteText"
        android:textSize="20sp"
        android:background="@drawable/bottom_sheet_profile_item_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_bottom_sheet_settings" />

</androidx.constraintlayout.widget.ConstraintLayout>