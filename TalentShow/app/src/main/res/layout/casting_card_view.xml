<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_back"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_casting_card"
        android:layout_margin="0.1dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/casting_card_layout"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/activity_casting_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:clickable="false"
                app:use_controller="false"
                android:background="@color/blackText"
                app:buffered_color="@color/blackText"
                app:default_artwork="@color/blackText"
                app:scrubber_color="@color/blackText"
                app:resize_mode="zoom"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/casting_top_gradient">

                <ImageView
                    android:id="@+id/casting_activity_avatar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"

                    android:layout_marginEnd="300dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="@id/activity_casting_name" />

                <ImageView
                    android:id="@+id/activity_casting_share_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:elevation="20dp"
                    android:src="@drawable/share_btn"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/casting_activity_avatar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/casting_activity_avatar" />



                <TextView
                    android:id="@+id/activity_casting_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="19dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/activity_casting_name"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@id/activity_casting_share_btn"
                    app:layout_constraintStart_toEndOf="@id/casting_activity_avatar"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/casting_fragment_control_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                android:visibility="invisible"
                android:layout_marginBottom="100dp"
                android:background="@drawable/casting_buttons_gradient"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <View
                    android:id="@+id/casting_fragment_fullscreen"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="5dp"
                    android:padding="15dp"
                    android:elevation="16dp"
                    android:foregroundGravity="center"
                    android:background="@drawable/full_screen_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/casting_fragment_volume"
                    />

                <View
                    android:id="@+id/casting_fragment_volume"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:padding="15dp"
                    android:elevation="16dp"
                    android:foregroundGravity="center"
                    android:background="@drawable/volume_on_white"
                    app:layout_constraintBottom_toTopOf="@id/casting_fragment_fullscreen"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>