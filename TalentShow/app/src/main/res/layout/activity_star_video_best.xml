<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.avatar.ava.presentation.main.FragmentChooseVideoBest">


    <com.deep.videotrimmer.DeepVideoTrimmer
        android:id="@+id/videoTrimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteText"
        android:text="Лучшие 30 секунд"
        android:textAppearance="@style/activity_star_video_best_heading"
        android:lineSpacingExtra="0sp"
        android:gravity="center_horizontal|top"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="112dp"
        android:layout_marginBottom="515dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:elevation="10dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="171dp"
        android:layout_marginBottom="452dp"
        android:elevation="10dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="3sp"
        android:text="@string/text_1"
        android:textAppearance="@style/text"
        android:textColor="@color/whiteText"
        android:translationY="-1.45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />










    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blackText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:layout_width="345dp"
        android:layout_height="44dp"
        android:id="@+id/activity_star_video_best_btn"
        android:layout_marginTop="670dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/blue_button_background"
        android:gravity="center"
        android:text="@string/next"
        android:textAppearance="@style/ActivityProducerNameButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>