<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.ActivityStarVideoBest">

    <TextView
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:text="Лучшие 30 секунд"
        android:textAppearance="@style/activity_star_video_best_heading"
        android:lineSpacingExtra="0sp"
        android:gravity="center_horizontal|top"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="112dp"
        android:layout_marginBottom="515dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:text="@string/text_1"
        android:textAppearance="@style/text"
        android:lineSpacingExtra="3sp"
        android:translationY="-1.45sp"
        android:gravity="center_horizontal|top"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="171dp"
        android:layout_marginBottom="452dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="296dp"
        android:id="@+id/activity_star_video_best_video"
        android:layout_marginTop="232dp"
        android:layout_marginBottom="139dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/activity_star_video_best_rangeSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:corner_radius="1"
        app:min_value="0"
        app:max_value="100"
        app:fix_gap="30"
        app:bar_color="#EE88F7"
        app:bar_highlight_color="#D810EA"
        app:left_thumb_color="#8D0D99"
        app:right_thumb_color="#8D0D99"
        app:left_thumb_color_pressed="#56005E"
        app:right_thumb_color_pressed="#56005E"
        app:data_type="_integer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_star_video_best_video"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_star_video_best_tv_min"
        android:text="0:00"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_star_video_best_rangeSeekbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_star_video_best_tv_max"
        android:text="0:00"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_star_video_best_rangeSeekbar"/>

    <TextView
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="524dp"
        android:layout_marginBottom="103dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="24sp"
        android:text="шаг 5 из 6"
        android:textAppearance="@style/activity_star_video_best_step"
        android:translationY="-12.24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="345dp"
        android:layout_height="44dp"
        android:id="@+id/activity_star_video_best_btn"
        android:layout_marginTop="564dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/blue_button_background"
        android:gravity="center"
        android:text="@string/next"
        android:textAppearance="@style/ActivityProducerNameButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>