<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".presentation.main.fragments.profile.ProfileFragment"
        android:id="@+id/fragment_profile"
        tools:ignore="LabelFor" >

        <ProgressBar
            android:id="@+id/profile_progress_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="invisible"
            android:layout_marginTop="15dp"
            android:elevation="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/fragment_profile_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="600dp"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/fragment_profile_image"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:contentDescription="@string/add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_profile_edit_photo"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="@string/edit_short"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/fragment_profile_image"
            app:layout_constraintEnd_toEndOf="@id/fragment_profile_image"
            app:layout_constraintStart_toStartOf="@id/fragment_profile_image"
            app:layout_constraintTop_toTopOf="@id/fragment_profile_image"
            />

        <EditText
            android:id="@+id/fragment_profile_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:background="#00000000"
            android:enabled="false"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@color/white"
            android:maxLength="40"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/fragment_profile_image"
            app:layout_constraintTop_toTopOf="@+id/fragment_profile_image"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/fragment_profile_heart_icon"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/like"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_likes"
            app:layout_constraintEnd_toStartOf="@+id/fragment_profile_likes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fragment_profile_likes"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/fragment_profile_likes"
            android:text="@string/zero_likes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_image"
            app:layout_constraintStart_toEndOf="@id/fragment_profile_heart_icon"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/fragment_profile_text1"
            android:text="@string/number_likes_u_got"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGrayText"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_likes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/fragment_profile_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_text1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <EditText
            android:id="@+id/fragment_profile_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textCursorDrawable="@color/white"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_text2" />

        <TextView
            android:id="@+id/fragment_profile_video_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="17dp"
            android:text="@string/uploaded_videos"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_description" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_video_tv">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.avatar.ava.presentation.main.videoCardView.VideoCardView
                    android:layout_width="0dp"
                    android:layout_height="105dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="11dp"
                    android:id="@+id/fragment_profile_video_card_view_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/fragment_profile_video_card_view_2"/>



                <com.avatar.ava.presentation.main.videoCardView.VideoCardView
                    android:layout_width="0dp"
                    android:layout_height="105dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="11dp"

                    app:cardCornerRadius="9dp"
                    android:id="@+id/fragment_profile_video_card_view_2"
                    app:cardBackgroundColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fragment_profile_video_card_view_1"
                    />



                <com.avatar.ava.presentation.main.videoCardView.VideoCardView
                    android:id="@+id/fragment_profile_video_card_view_3"
                    android:layout_width="0dp"
                    android:layout_height="105dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"

                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="9dp"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/fragment_profile_video_card_view_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragment_profile_video_card_view_1"
                    />



                <com.avatar.ava.presentation.main.videoCardView.VideoCardView
                    android:id="@+id/fragment_profile_video_card_view_4"
                    android:layout_width="0dp"
                    android:layout_height="105dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="11dp"

                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="9dp"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fragment_profile_video_card_view_3"
                    app:layout_constraintTop_toBottomOf="@id/fragment_profile_video_card_view_2"/>


                <com.avatar.ava.presentation.main.videoCardView.VideoCardView
                    android:layout_width="0dp"
                    android:layout_height="105dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="11dp"
                    android:id="@+id/fragment_profile_video_card_view_5"
                    app:layout_constraintTop_toBottomOf="@id/fragment_profile_video_card_view_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/fragment_profile_video_card_view_1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>






    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
