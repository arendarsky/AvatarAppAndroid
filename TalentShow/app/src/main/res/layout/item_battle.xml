<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_semifinalists_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_semifinalists_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="02 : 03 : 21"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_semifinalists_list" />

    <TextView
        android:id="@+id/fragment_semifinalists_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_battle_day"
        android:gravity="top"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/fragment_semifinalists_time"
        app:layout_constraintStart_toStartOf="@+id/fragment_semifinalists_time"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="@string/end_battle_hour"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/fragment_semifinalists_minutes"
        app:layout_constraintStart_toEndOf="@+id/fragment_semifinalists_days"
        app:layout_constraintTop_toBottomOf="@id/fragment_semifinalists_time" />

    <TextView
        android:id="@+id/fragment_semifinalists_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_battle_minutes"
        android:gravity="top"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/fragment_semifinalists_time"
        app:layout_constraintEnd_toEndOf="@+id/fragment_semifinalists_time"
        />

    <include
        android:id="@+id/view_stub_battle_video_player"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        layout="@layout/battle_video_player"
        android:layout_marginTop="12dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_semifinalists_days"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_stub_battle_video_player">

        <RelativeLayout
            android:id="@+id/like_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="10dp">

            <View
                android:id="@+id/like"
                android:layout_width="43dp"
                android:layout_height="40dp"
                android:background="@drawable/like"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/like_full"
                android:layout_width="43dp"
                android:layout_height="40dp"
                android:background="@drawable/like_full"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/hint_winners_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/grayText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/like_image"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>