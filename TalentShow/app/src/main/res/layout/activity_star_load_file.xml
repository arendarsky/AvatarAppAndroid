<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_star_load_file_text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="14dp"
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="@color/blackText"
        android:text="@string/talant_video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/activity_star_load_file_text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="19dp"
        android:textColor="@color/blackText"
        android:textSize="17sp"
        android:gravity="center"
        android:text="@string/leave_mail"
        app:layout_constraintTop_toBottomOf="@id/activity_star_load_file_text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="67dp"
        android:layout_marginStart="93dp"
        android:layout_marginEnd="93dp"
        android:background="@drawable/rounded_white_square"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_star_load_file_text2"
        app:layout_constraintBottom_toTopOf="@id/activity_star_load_file_text3">
        
        <View
            android:id="@+id/activity_star_load_file_circle"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/gray_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>



        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/plus_cross"
            app:layout_constraintBottom_toBottomOf="@id/activity_star_load_file_circle"
            app:layout_constraintTop_toTopOf="@id/activity_star_load_file_circle"
            app:layout_constraintEnd_toEndOf="@id/activity_star_load_file_circle"
            app:layout_constraintStart_toStartOf="@id/activity_star_load_file_circle"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/medium_gray_text"
            android:text="@string/add_ur_video"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_star_load_file_circle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/activity_star_load_file_text3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/blackText"
        android:layout_marginBottom="13dp"
        android:text="@string/step_4"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_star_load_file_continue"/>

    <TextView
        android:id="@+id/activity_star_load_file_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="93dp"
        android:background="@drawable/blue_button_background"
        android:textSize="17sp"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/whiteText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>